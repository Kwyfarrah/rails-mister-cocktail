<div class="show_banner" style="background-image: linear-gradient(rgba(0,0,0,0.1),rgba(0,0,0,0.1)), url(https://images.unsplash.com/photo-1481833761820-0509d3217039?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80);">
<h1><%= @cocktail.name %></h1>

</div>
<div class ="container">
  <div class="card-product">
    <% if @cocktail.image_url != '' %>
      <%= image_tag @cocktail.image_url, width:400, class:"card-img" %>
    <% elsif @cocktail.photo.attached? %>
       <%= cl_image_tag @cocktail.photo.key, width: 400, crop: :scale %>
    <% else %>
       <%= cl_image_tag("yoxubppsbfzrsw35gyw8",width: 200, crop: :fit) %>
    <% end %>
    <div class="card-product-infos">
      <h1>Ingredients</h1>
      <hr>
      <%= render 'doses/index', doses: @cocktail.doses %>
     </div>
  </div>
</div>

