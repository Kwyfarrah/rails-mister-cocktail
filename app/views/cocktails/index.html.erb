            <%= image_tag cocktail.image_url, width:200, class:"card-img" %>
            <% end %>
          <% end %>

          <div class="card-cocktail-infos">
            <div>
              <h2><%= cocktail.name %></h2>
            </div>
              <%= link_to vote_cocktail_path(cocktail), :method => :post do %>
