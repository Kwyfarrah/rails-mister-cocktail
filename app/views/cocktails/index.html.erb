    <% @cocktails.each do |cocktail| %>

        <div class="card-cocktail">
          <%= link_to cocktail_path(cocktail) do %>
            <% if cocktail.image_url.nil? %>
            <%= image_tag 'https://www.rakumachi.jp/images/frontend/smartphone/nophoto_thumbnail.png', width:200, class:"card-img" %>
