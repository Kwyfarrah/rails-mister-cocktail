<div class="show_banner" style="background-image: linear-gradient(rgba(0,0,0,0.1),rgba(0,0,0,0.1)), url(https://images.unsplash.com/photo-1481833761820-0509d3217039?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80);">
<h1><%= @cocktail.name %></h1>

</div>
<div class ="container">
  <h1 class = "mt-5">New dose for <%= @cocktail.name %> </h1>
  <div class= "form mt-5">
  <%= simple_form_for [ @cocktail, @dose ] do |f| %>
    <%= f.input :description %>
    <%= f.association :ingredient, collection: Ingredient.all %>
    <%= f.submit "Add a dose", class: "btn btn-primary" %>
  <% end %>
  </div>
</div>
